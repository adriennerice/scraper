  <nav class="navbar navbar-expand-lg">
    <a class="navbar-brand text-white" href="/">Anime News Scraper</a>
    <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarColor01">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link text-white" href="/">Home
            <span class="sr-only">(current)</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/saved">Saved Articles</a>
        </li>
      </ul>
    </div>
  </nav>

  <div class="jumbotron text-center background-image">
    <div class="overlay">
      <div class="caption">
        <h1 class="display-1 text-white">Anime News Scraper</h1>
        <h2 class="text-white">Saved News</h2>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div id="results">
      <div class="col-12">  
        {{#if news}}
        {{#each news}}
          <div class="card border-dark mb-3">
            <div class="row">
              <div class="col-md-2">
                <img src="{{imgUrl}}" class="card-img" alt="news image">
              </div>
              <div class="col-md-10">
                <div class="card-body">
                    <div class="card-header text-white headlineTop">
                      <h4 class="card-title"><a href={{url}} target="_blank" class="text-white">
                        {{headline}}</a>
                      </h4>
                    </div>
                  <div class="row">
                    <p class="card-text cardBottom">
                      {{summary}}
                    </p>
                      <span class="buttonBottom">
                        <button id="{{_id}}" class="addNote btn btn-primary save-btn">Add Note</button>
                        <button id="{{_id}}" class="deleteNews btn btn-primary save-btn">Delete News</button>
                      </span>
                  </div>
                </div>
            </div>
          </div>
        </div>
          
        {{/each}}
        {{else}}
          <div class="card text-white bg-warning w-90 p-1">
            <div class="card-body text-center">
              <h4>No new articles</h4>
            </div>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
   </div>     

    <!-- Modal -->
    <div class="modal fade" id="noteModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Save News Note</h5>
                <button type="button" class="close" data-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="card cardNotesSaved">
                  <ul id="notesSaved">
                  </ul>
                </div>
                <br>
                 <textarea class="form-control" id="noteBody" rows="3" placeholder="New Note"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="saveNote">Save note</button>
            </div>
            </div>
        </div>
    </div>



